<?xml version="1.0"?>
<form>
    <fieldset>
        <field name="name" type="text" label="COM_SNIPPET_LIST_NAME" description="COM_SNIPPET_LIST_NAME_DESCRIPTION" required="true" class="input-xxlarge input-large-text"/>
        <field name="note" type="note" label="" description="COM_SNIPPET_LIST_NAME_DESCRIPTION" class="input-xxlarge alert alert-success"/>
        <field name="content" type="editor" label="COM_SNIPPET_LIST_CONTENT" class="span12" format="raw"/>
        <field name="published" type="radio" label="JSTATUS" default="1" class="btn-group">
		    <option value="1">JPUBLISHED</option>
		    <option value="0">JUNPUBLISHED</option>
	    </field>
        <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" readonly="true"/>
    </fieldset>
</form>
